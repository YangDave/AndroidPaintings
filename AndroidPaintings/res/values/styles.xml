<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/drak</item>
    </style>

    <style name="tab_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/tab_selector_tv_color</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/tab_selector_checked_bg</item>
    </style>

    <style name="tab_category">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/tab_category_color</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/tab_selector_category_bg</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 内容覆盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->


        
　</style>

    <style name="fragment4Bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_selector_frag4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="tableRow">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="tableRow_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="tableRow_right">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title</item>
    </style>


    <style name="tableRow_right_button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/title</item>
    </style>

    <style name="auction_info">
        <item name="android:textSize">@dimen/auction_info_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="auction_info_current">
        <item name="android:textSize">@dimen/auction_info_textsize</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="button_sign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button_selector_sign</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sign_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="sign_tablerow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="sign_mark">
        <item name="android:layout_width">@dimen/sign_pic_size</item>
        <item name="android:layout_height">@dimen/sign_pic_size</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="sign_edittext">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/sign_editview_selector_shape</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="global_linearlayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="user_info_column">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/user_info_text_size</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="user_info">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/user_info_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="user_info_tablerow">
        <item name="android:paddingTop">10dp</item>
        <!-- <item name="android:layout_width">match_parent</item> -->
        <!-- <item name="android:layout_height">wrap_content</item> -->
    </style>

    <style name="user_info_column_black">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/user_info_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="asso_page_table_imagebutton_left">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/button_selector_asso</item>
    </style>

    <style name="asso_page_table_imagebutton_right">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/button_selector_asso</item>
    </style>

    <style name="asso_info_column">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="asso_info_content">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
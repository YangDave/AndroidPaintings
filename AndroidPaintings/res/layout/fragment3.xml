<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    
     <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioGroup
            android:id="@+id/tab_asso"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal" >
            
            <RadioButton
                android:id="@+id/asso_rb1"
                style="@style/tab_category"
                android:checked="true"
                android:text="@string/asso_joined" />

            <RadioButton
                android:id="@+id/asso_rb2"
                style="@style/tab_category"
                android:text="@string/focused_asso" />

            <RadioButton
                android:id="@+id/asso_rb3"
                style="@style/tab_category"
                android:text="@string/asso_list" />
        </RadioGroup>
    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/pic_name"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"/>
        
        <ImageView 
            android:id="@+id/myImage"
            android:layout_height="100dp"
            android:layout_width="150dp"
            android:clickable="true"
            android:background="#F4F4F4"
            android:layout_gravity="center_horizontal"/>
        
         <TableLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:shrinkColumns="0">
        <TableRow android:paddingTop="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作      者:"
                android:gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="创作时间"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/date_creation"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="上传日期"
                android:gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/date_on"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="尺      寸"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/size"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="是否认证"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/identification"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        
    </TableLayout>
    <TextView android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简介"
                android:gravity="center_horizontal"/>
     <TextView android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
         <Button 
             android:id="@+id/set_auction"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="发起拍卖"/>
         
          <TextView 
             android:id="@+id/current_price"
             android:layout_width="match_parent"
             android:textSize="20sp"
             android:visibility="gone"
             android:text="当前价格(￥)：0"
             android:layout_height="wrap_content"
             />
        
     <Button 
         android:id="@+id/showcomment"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center_horizontal"
         android:text="@string/showcomment"/>
      <LinearLayout 
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="horizontal">
         <Button
             android:id="@+id/previous"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="上一幅"
             android:layout_weight="1"></Button>
         
          <Button
             android:id="@+id/next"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="下一幅"
             android:layout_weight="1"></Button>
     </LinearLayout>
        
    </LinearLayout>
     
    

</ScrollView>

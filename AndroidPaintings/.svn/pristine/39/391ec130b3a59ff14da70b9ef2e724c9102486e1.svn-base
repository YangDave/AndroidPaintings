<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/collect"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="收藏"
        android:layout_gravity="right"/>
    
    <TextView 
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>
    <ImageView 
        android:id="@+id/image"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:scaleType="fitXY"
        android:background="#ff0000"
        android:layout_width="200dp"
        android:layout_height="120dp"/>
    <TableLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:shrinkColumns="0">
        <TableRow android:paddingTop="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="作      者:"
                android:gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/author"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="创作时间:"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/date_creation"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="上传用户:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <Button 
                android:id="@+id/uploader"
                android:gravity="left"
                android:background="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="上传日期:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/date_on"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="尺      寸:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/size"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:dividerPadding="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="是否认证:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/identification"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        
    </TableLayout>
    
     <TextView android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简   介"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
     <TextView android:paddingTop="3dp"
         android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
     <LinearLayout 
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="horizontal">
         <Button
             android:id="@+id/previous"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             style="@android:attr/buttonBarButtonStyle"
             android:text="上一幅"
             android:layout_weight="1"></Button>
         
          <Button
             android:id="@+id/next"
             style="@android:attr/buttonBarButtonStyle"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="下一幅"
             android:layout_weight="1"/>
     </LinearLayout>
     <Button 
         android:id="@+id/getcomment"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:text="查看评论"
         />
    

</LinearLayout>
</ScrollView>

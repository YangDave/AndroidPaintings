<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户资料修改"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/cancelInfoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        />
    <Button 
        android:id="@+id/okinfoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginRight="20dp"
        />
    </LinearLayout>
     <ImageView 
        android:id="@+id/headphotoId"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher"
        android:clickable="true"/>
    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:shrinkColumns="0"
        android:stretchColumns="1">
        <TableRow >
            <TextView 
                
                android:text="真实姓名："
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <EditText 
                android:id="@+id/namechange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
               android:singleLine="true"
                android:clickable="true"
                />
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性       别："
                android:textSize="18sp" />
            <RadioGroup android:id="@+id/sexgroup"
                android:orientation="horizontal"
                android:layout_gravity="start">
                <RadioButton 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="@string/male"
                    />
                <RadioButton 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="@string/female"/>
            </RadioGroup>
               
        </TableRow>
        
        <TableRow android:layout_marginTop="5dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textSize="18sp"/>
            <EditText 
                android:id="@+id/phonechange"
                android:singleLine="true"
                android:inputType="number"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:textSize="18sp"/>
        </TableRow>
        <TableRow 
            android:layout_marginTop="5dp">
            <TextView 
                
                android:text="年       龄："
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <EditText 
                android:id="@+id/agechange"
                android:singleLine="true"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>
               
        </TableRow>
         
         <TableRow android:paddingTop="5dp">
            <TextView 
                
                android:text="出生日期："
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <Button 
                android:id="@+id/birthdaychange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                
                android:text="1990年1月1日"/>
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地        址："
                android:textSize="18sp"/>
            
            <EditText 
                android:id="@+id/addresschange"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textSize="18sp" />
        </TableRow>
        <TableRow android:layout_marginTop="5dp">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人介绍："
                android:textSize="18sp"/>
            
            <EditText 
                android:id="@+id/selfintroduction"
               android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>
    
  

</LinearLayout>
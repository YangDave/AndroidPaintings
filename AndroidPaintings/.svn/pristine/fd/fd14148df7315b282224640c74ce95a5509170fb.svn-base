<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <TextView 
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>
    <ImageView 
        android:id="@+id/image"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:scaleType="fitXY"
        android:background="#ff0000"
        android:layout_width="200dp"
        android:layout_height="120dp"/>
    <TableLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:shrinkColumns="0">
        <TableRow android:paddingTop="3dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="作      者:"
                android:gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/author"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="创作时间:"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/date_creation"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="上传用户:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <Button 
                android:id="@+id/uploader"
                android:gravity="left"
                android:background="#FFFFFF"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp">
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="上传日期:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView 
                android:id="@+id/date_on"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        <TableRow android:paddingTop="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="尺      寸:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/size"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </TableRow>
        
          <TableRow android:dividerPadding="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="当前出价:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/current_price"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        
            <TableRow android:dividerPadding="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="截止时间:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/remain_time"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        
            <TableRow android:dividerPadding="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="出价次数:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView android:id="@+id/count"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        
             <TableRow android:dividerPadding="3dp" >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="我要出价:"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <EditText android:id="@+id/set_price"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="20sp"
                android:layout_width="match_parent"/>
        </TableRow>
        
        
    </TableLayout>
    
     <TextView android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="简   介"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
     <TextView android:paddingTop="3dp"
                android:textSize="20sp"
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    

</LinearLayout>
